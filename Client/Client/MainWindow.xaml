        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="49*"/>
            <ColumnDefinition Width="744*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lUsername" Content="Username" HorizontalAlignment="Left" Margin="85,67,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <TextBox x:Name="tbUsername" HorizontalAlignment="Left" Height="24" Margin="173,71,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
