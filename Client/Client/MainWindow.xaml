        <TextBox x:Name="tbPassword" HorizontalAlignment="Left" Height="24" Margin="173,145,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <Button x:Name="btLogin" Content="Login" Grid.Column="1" HorizontalAlignment="Left" Margin="197,214,0,0" VerticalAlignment="Top" Width="76" Click="btLogin_Click"/>

    </Grid>
</Window>
